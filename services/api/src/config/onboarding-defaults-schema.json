{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Onboarding Defaults Configuration",
  "description": "Schema for validating onboarding default content configuration",
  "type": "object",
  "required": ["version", "drivers"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Semantic version of the onboarding content",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "drivers": {
      "type": "array",
      "description": "Array of default drivers to create during onboarding",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/driver"
      }
    }
  },
  "definitions": {
    "driver": {
      "type": "object",
      "required": ["title", "isActive", "milestones"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "maxLength": 1000
        },
        "isActive": {
          "type": "boolean"
        },
        "milestones": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/milestone"
          }
        }
      }
    },
    "milestone": {
      "type": "object",
      "required": ["title", "actions"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "maxLength": 1000
        },
        "targetDate": {
          "type": "string",
          "format": "date-time"
        },
        "actions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/action"
          }
        }
      }
    },
    "action": {
      "type": "object",
      "required": ["title", "state"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "description": {
          "type": "string",
          "maxLength": 1000
        },
        "state": {
          "type": "string",
          "enum": ["planned", "in-progress", "completed", "deferred", "rolled-over"]
        },
        "estimatedMinutes": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1440
        },
        "trigger": {
          "type": "string",
          "maxLength": 500
        },
        "recurrencePattern": {
          "$ref": "#/definitions/recurrencePattern"
        }
      }
    },
    "recurrencePattern": {
      "type": "object",
      "required": ["frequency"],
      "properties": {
        "frequency": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly"]
        },
        "interval": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "type": "array",
              "items": {
                "type": "integer",
                "minimum": 0,
                "maximum": 6
              }
            }
          ]
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
