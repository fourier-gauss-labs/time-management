{
  "name": "time-management",
  "version": "0.1.0",
  "private": true,
  "description": "Time management and focus application",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "pnpm -r exec tsc --noEmit",
    "test": "pnpm -r --filter './apps/**' --filter './packages/**' test run",
    "test:ci": "pnpm -r --filter './apps/**' --filter './packages/**' test run --coverage",
    "test:watch": "pnpm -r --filter './apps/**' --filter './packages/**' test",
    "build": "pnpm -r --filter './packages/**' build"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
